@page
@model AdminDashboard.Products.Delete.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Product
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this product? 
                        This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Product.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(Model.Product.Description ?? "-")</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Product.CategoryName))
                            {
                                <span class="badge bg-info">@Model.Product.CategoryName</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Unit Price</dt>
                        <dd class="col-sm-9">
                            <strong>$@Model.Product.UnitPrice.ToString("N2")</strong>
                        </dd>

                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Product.Stock > 50 ? "bg-success" : Model.Product.Stock > 10 ? "bg-warning" : "bg-danger")">
                                @Model.Product.Stock units
                            </span>
                        </dd>

                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">@Model.Product.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                        @if (Model.Product.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-3">Last Updated</dt>
                            <dd class="col-sm-9">@Model.Product.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                        }
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>