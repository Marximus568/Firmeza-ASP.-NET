@page "{id:int?}"
@model AdminDashboard.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete User
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.User != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
                        </div>

                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title mb-3">User Information</h5>
                                <dl class="row mb-0">
                                    <dt class="col-sm-3">ID:</dt>
                                    <dd class="col-sm-9">@Model.User.Id</dd>

                                    <dt class="col-sm-3">Full Name:</dt>
                                    <dd class="col-sm-9"><strong>@Model.User.FullName</strong></dd>

                                    <dt class="col-sm-3">Email:</dt>
                                    <dd class="col-sm-9">@Model.User.Email</dd>

                                    <dt class="col-sm-3">Phone:</dt>
                                    <dd class="col-sm-9">@Model.User.PhoneNumber</dd>

                                    <dt class="col-sm-3">Age:</dt>
                                    <dd class="col-sm-9">@Model.User.Age years old</dd>

                                    <dt class="col-sm-3">Address:</dt>
                                    <dd class="col-sm-9">@Model.User.Address</dd>

                                    <dt class="col-sm-3">Role:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge bg-@GetRoleBadgeClass(Model.User.Role)">
                                            @Model.User.Role
                                        </span>
                                    </dd>

                                    <dt class="col-sm-3">Total Sales:</dt>
                                    <dd class="col-sm-9">
                                        <span class="badge bg-info">@Model.User.TotalSales</span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        @if (Model.User.TotalSales > 0)
                        {
                            <div class="alert alert-warning" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                This user has <strong>@Model.User.TotalSales sales</strong> associated. 
                                Deleting this user may affect related records.
                            </div>
                        }

                        <form method="post">
                            <input type="hidden" asp-for="User!.Id" />
                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Confirm Delete
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            User not found.
                        </div>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "User" => "primary",
            "Guest" => "secondary",
            _ => "dark"
        };
    }
}