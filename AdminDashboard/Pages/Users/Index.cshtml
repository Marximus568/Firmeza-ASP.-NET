@page
@model IndexModel
@{
    ViewData["Title"] = "Users Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3">
                <i class="fas fa-users me-2"></i>Users Management
            </h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2 class="mb-0">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Admins</h5>
                    <h2 class="mb-0">@Model.TotalAdmins</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Regular Users</h5>
                    <h2 class="mb-0">@Model.TotalRegularUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Managers</h5>
                    <h2 class="mb-0">@Model.TotalManagers</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Search</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           placeholder="Name or email..." value="@Model.Filter.SearchTerm">
                </div>
                <div class="col-md-2">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role">
                        <option value="">All Roles</option>
                        <option value="Admin" selected="@(Model.Filter.Role == "Admin")">Admin</option>
                        <option value="User" selected="@(Model.Filter.Role == "User")">User</option>
                        <option value="Manager" selected="@(Model.Filter.Role == "Manager")">Manager</option>
                        <option value="Guest" selected="@(Model.Filter.Role == "Guest")">Guest</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="sortBy" class="form-label">Sort By</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="FirstName" selected="@(Model.Filter.SortBy == "FirstName")">First Name</option>
                        <option value="LastName" selected="@(Model.Filter.SortBy == "LastName")">Last Name</option>
                        <option value="Email" selected="@(Model.Filter.SortBy == "Email")">Email</option>
                        <option value="DateOfBirth" selected="@(Model.Filter.SortBy == "DateOfBirth")">Age</option>
                        <option value="Role" selected="@(Model.Filter.SortBy == "Role")">Role</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="sortDirection" class="form-label">Order</label>
                    <select class="form-select" id="sortDirection" name="sortDirection">
                        <option value="asc" selected="@(Model.Filter.SortDirection == "asc")">Ascending</option>
                        <option value="desc" selected="@(Model.Filter.SortDirection == "desc")">Descending</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Users List</h5>
            <a asp-page="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Add New User
            </a>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Age</th>
                                <th>Role</th>
                                <th>Total Sales</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <strong>@user.FullName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Age years</td>
                                    <td>
                                        <span class="badge bg-@GetRoleBadgeClass(user.Role)">
                                            @user.Role
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@user.TotalSales</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="Edit" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.Filter.PageNumber == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="Index" 
                               asp-route-pageNumber="@(Model.Filter.PageNumber - 1)"
                               asp-route-searchTerm="@Model.Filter.SearchTerm"
                               asp-route-role="@Model.Filter.Role"
                               asp-route-sortBy="@Model.Filter.SortBy"
                               asp-route-sortDirection="@Model.Filter.SortDirection">
                                Previous
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.Filter.PageNumber == i ? "active" : "")">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-pageNumber="@i"
                                   asp-route-searchTerm="@Model.Filter.SearchTerm"
                                   asp-route-role="@Model.Filter.Role"
                                   asp-route-sortBy="@Model.Filter.SortBy"
                                   asp-route-sortDirection="@Model.Filter.SortDirection">
                                    @i
                                </a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.Filter.PageNumber == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="Index" 
                               asp-route-pageNumber="@(Model.Filter.PageNumber + 1)"
                               asp-route-searchTerm="@Model.Filter.SearchTerm"
                               asp-route-role="@Model.Filter.Role"
                               asp-route-sortBy="@Model.Filter.SortBy"
                               asp-route-sortDirection="@Model.Filter.SortDirection">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>

                <p class="text-center text-muted">
                    Showing @((Model.Filter.PageNumber - 1) * Model.Filter.PageSize + 1) 
                    to @Math.Min(Model.Filter.PageNumber * Model.Filter.PageSize, Model.TotalCount) 
                    of @Model.TotalCount users
                </p>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No users found. <a asp-page="Create" class="alert-link">Create your first user</a>.
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "User" => "primary",
            "Guest" => "secondary",
            _ => "dark"
        };
    }
}