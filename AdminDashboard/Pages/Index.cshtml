@page
@model AdminDashboard.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <h1>Welcome to AdminDashboard</h1>
    <p>This is the home page of your application.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello, @User.Identity.Name! You are logged in.</p>
        <p>Go to your <a asp-page="/Dashboard/Index">dashboard</a> to manage your data.</p>
    }
    else
    {
        <p>Please <a asp-page="/Account/Login">login</a> or <a asp-page="/Account/Register">register</a> to access the dashboard.</p>
    }
</div>

@section Scripts {
    <script>
        console.log("Home page loaded");
    </script>
}