@page
@model DetailsModel
@{
    ViewData["Title"] = "Category Details";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-page="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0">
                    <i class="fas fa-info-circle text-info me-2"></i>
                    Category Details
                </h2>
            </div>

            <!-- Details Card -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-tag me-2"></i>Category Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">
                            <i class="fas fa-hashtag me-1"></i>ID:
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary fs-6">@Model.Category.Id</span>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-tag me-1"></i>Name:
                        </dt>
                        <dd class="col-sm-8">
                            <h5 class="mb-0">@Model.Category.Name</h5>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="fas fa-box me-1"></i>Associated Products:
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.ProductCount > 0)
                            {
                                <span class="badge bg-primary fs-6">
                                    @Model.ProductCount product(s)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No associated products</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-title mb-3">
                        <i class="fas fa-tools me-2"></i>Actions
                    </h6>
                    <div class="d-grid gap-2">
                        <a asp-page="Edit" asp-route-id="@Model.Category.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Category
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.Category.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-2"></i>Delete Category
                        </a>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>

            <!-- Products Info -->
            @if (Model.ProductCount > 0)
            {
                <div class="card mt-3 border-primary">
                    <div class="card-body">
                        <h6 class="card-title text-primary">
                            <i class="fas fa-info-circle me-2"></i>Information
                        </h6>
                        <p class="small mb-0">
                            This category has <strong>@Model.ProductCount product(s)</strong> associated. 
                            You can view and manage products from the Products section.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
