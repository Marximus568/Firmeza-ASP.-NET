@page
@model CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-page="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0">
                    <i class="fas fa-plus-circle text-success me-2"></i>
                    Create New Category
                </h2>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Category Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Category.Name" class="form-label">
                                <i class="fas fa-tag me-1"></i>Category Name
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Category.Name" 
                                   class="form-control form-control-lg" 
                                   placeholder="Ex: Electronics, Clothing, Food..."
                                   required />
                            <span asp-validation-for="Category.Name" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                The name must be unique and descriptive
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Save Category
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="fas fa-lightbulb me-2"></i>Tips
                    </h6>
                    <ul class="small mb-0">
                        <li>Use descriptive and clear names for categories</li>
                        <li>Categories help you organize your products</li>
                        <li>You can create multiple categories according to your needs</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
