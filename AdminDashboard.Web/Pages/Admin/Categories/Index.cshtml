@page
@model IndexModel
@{
    ViewData["Title"] = "Category List";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-tags text-primary me-2"></i>
            Product Categories
        </h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Category
        </a>
    </div>

    <!-- Alerts -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" 
                               asp-for="SearchString" 
                               class="form-control" 
                               placeholder="Search by category name...">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Category List</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 10%;">ID</th>
                                <th style="width: 60%;">Name</th>
                                <th style="width: 30%;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <span class="badge bg-secondary">@category.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <strong>@category.Name</strong>
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" 
                                               asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-info"
                                               title="View details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="Edit" 
                                               asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="Delete" 
                                               asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-danger"
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchString))
                        {
                            <span>No categories found matching "<strong>@Model.SearchString</strong>"</span>
                        }
                        else
                        {
                            <span>No categories registered. Create the first one!</span>
                        }
                    </p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create First Category
                    </a>
                </div>
            }
        </div>
        @if (Model.Categories.Any())
        {
            <div class="card-footer bg-light">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Total: <strong>@Model.Categories.Count</strong> category(ies)
                </small>
            </div>
        }
    </div>
</div>
