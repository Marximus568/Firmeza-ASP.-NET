@page
@model CreateModel
@{
    ViewData["Title"] = "New Sale";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-page="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0">
                    <i class="fas fa-plus-circle text-success me-2"></i>
                    Register New Sale
                </h2>
            </div>

            <!-- Form Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-file-invoice-dollar me-2"></i>Sale Details</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Invoice Number -->
                            <div class="col-md-6">
                                <label asp-for="Sale.InvoiceNumber" class="form-label">
                                    <i class="fas fa-hashtag me-1"></i>Invoice Number
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Sale.InvoiceNumber" 
                                       class="form-control" 
                                       placeholder="Ex: INV-001"
                                       required />
                                <span asp-validation-for="Sale.InvoiceNumber" class="text-danger small"></span>
                            </div>

                            <!-- Date -->
                            <div class="col-md-6">
                                <label asp-for="Sale.SaleDate" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Date
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Sale.SaleDate" 
                                       class="form-control" 
                                       type="datetime-local"
                                       required />
                                <span asp-validation-for="Sale.SaleDate" class="text-danger small"></span>
                            </div>

                            <!-- Client -->
                            <div class="col-md-12">
                                <label asp-for="Sale.ClientId" class="form-label">
                                    <i class="fas fa-user me-1"></i>Client
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Sale.ClientId" class="form-select" asp-items="Model.Clients">
                                    <option value="">-- Select Client --</option>
                                </select>
                                <span asp-validation-for="Sale.ClientId" class="text-danger small"></span>
                            </div>

                            <!-- Totals -->
                            <div class="col-md-4">
                                <label asp-for="Sale.Subtotal" class="form-label">Subtotal</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Sale.Subtotal" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Sale.Subtotal" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Sale.Total" class="form-label">
                                    Total <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Sale.Total" class="form-control" type="number" step="0.01" required />
                                </div>
                                <span asp-validation-for="Sale.Total" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Sale.IsPaid" class="form-label">Status</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input" type="checkbox" asp-for="Sale.IsPaid">
                                    <label class="form-check-label" asp-for="Sale.IsPaid">Paid</label>
                                </div>
                            </div>

                            <!-- Notes -->
                            <div class="col-12">
                                <label asp-for="Sale.Notes" class="form-label">
                                    <i class="fas fa-sticky-note me-1"></i>Notes
                                </label>
                                <textarea asp-for="Sale.Notes" class="form-control" rows="3" placeholder="Additional comments..."></textarea>
                                <span asp-validation-for="Sale.Notes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Save Sale
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
