@page
@model IndexModel
@{
    ViewData["Title"] = "Sales List";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-shopping-cart text-primary me-2"></i>
            Sales Management
        </h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Sale
        </a>
    </div>

    <!-- Alerts -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search and Filters -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" 
                               asp-for="SearchString" 
                               class="form-control" 
                               placeholder="Search by invoice or client...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select asp-for="PaymentStatus" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="paid">Paid</option>
                        <option value="pending">Pending</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Sales List</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Sales.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Invoice</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sale in Model.Sales)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <strong>@sale.InvoiceNumber</strong>
                                    </td>
                                    <td class="align-middle">
                                        @sale.SaleDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="align-middle">
                                        @if (sale.Clients != null)
                                        {
                                            <span>@sale.Clients.FirstName @sale.Clients.LastName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unknown Client</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        $@sale.Total.ToString("N2")
                                    </td>
                                    <td class="align-middle">
                                        @if (sale.IsPaid)
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a asp-page="Details" asp-route-id="@sale.Id" class="btn btn-sm btn-info" title="View details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!string.IsNullOrEmpty(sale.ReceiptPath))
                                            {
                                                <a href="@sale.ReceiptPath" 
                                                   target="_blank" 
                                                   download
                                                   class="btn btn-sm btn-success"
                                                   title="Download PDF Receipt">
                                                    <i class="fas fa-file-pdf"></i>
                                                </a>
                                            }
                                            <a asp-page="Edit" asp-route-id="@sale.Id" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@sale.Id" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SearchString))
                        {
                            <span>No sales found matching "<strong>@Model.SearchString</strong>"</span>
                        }
                        else
                        {
                            <span>No sales registered. Create the first one!</span>
                        }
                    </p>
                    <a asp-page="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create First Sale
                    </a>
                </div>
            }
        </div>
        @if (Model.Sales.Any())
        {
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Total: <strong>@Model.Sales.Count</strong> sale(s)
                    </small>
                    <div class="h5 mb-0 text-primary">
                        Total Sales: $@Model.Sales.Sum(s => s.Total).ToString("N2")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
