@page "{id:int?}"
@model AdminDashboard.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid px-4 pt-4 animate-fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-1 text-gradient" style="font-size: 2.5rem; font-weight: 800;">
                <i class="fas fa-user-edit me-3"></i>Edit User
            </h1>
            <p class="text-muted" style="font-size: 1.1rem;">
                <i class="fas fa-info-circle me-2"></i>Actualiza la información del usuario
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="UpdateUserDto.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="UpdateUserDto.FirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input asp-for="UpdateUserDto.FirstName" class="form-control" />
                                <span asp-validation-for="UpdateUserDto.FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="UpdateUserDto.LastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input asp-for="UpdateUserDto.LastName" class="form-control" />
                                <span asp-validation-for="UpdateUserDto.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UpdateUserDto.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="UpdateUserDto.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="UpdateUserDto.Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="UpdateUserDto.PhoneNumber" class="form-label">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-phone text-success"></i>
                                    </span>
                                    <input asp-for="UpdateUserDto.PhoneNumber" class="form-control" />
                                </div>
                                <span asp-validation-for="UpdateUserDto.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="UpdateUserDto.DateOfBirth" class="form-label">
                                    <i class="fas fa-calendar me-2"></i>Date of Birth
                                </label>
                                <input asp-for="UpdateUserDto.DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="UpdateUserDto.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UpdateUserDto.Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Address
                            </label>
                            <textarea asp-for="UpdateUserDto.Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="UpdateUserDto.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UpdateUserDto.Role" class="form-label">
                                <i class="fas fa-user-tag me-2"></i>User Role
                            </label>
                            <select asp-for="UpdateUserDto.Role" class="form-select">
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                                <option value="Manager">Manager</option>
                                <option value="Guest">Guest</option>
                            </select>
                            <span asp-validation-for="UpdateUserDto.Role" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UpdateUserDto.Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Change Password (Optional)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="fas fa-lock text-warning"></i>
                                </span>
                                <input asp-for="UpdateUserDto.Password" type="password" class="form-control" placeholder="Leave empty to keep current password" />
                            </div>
                            <span asp-validation-for="UpdateUserDto.Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>Only fill this field if you want to change the user's password
                            </small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Asegúrate de que toda la información sea correcta antes de guardar
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between gap-3">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg shadow-glow">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}