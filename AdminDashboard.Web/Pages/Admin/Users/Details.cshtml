@page "{id:int?}"
@model AdminDashboard.Pages.Admin.Users.DetailsModel
@{
    ViewData["Title"] = "User Details";
}

<div class="container-fluid px-4 pt-4 animate-fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-1 text-gradient" style="font-size: 2.5rem; font-weight: 800;">
                <i class="fas fa-user-circle me-3"></i>User Details
            </h1>
            <p class="text-muted" style="font-size: 1.1rem;">
                <i class="fas fa-info-circle me-2"></i>Información detallada del usuario
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-lg">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-id-badge me-2"></i>@Model.User.FullName
                    </h5>
                    <div class="d-flex gap-2">
                        <a asp-page="Edit" asp-route-id="@Model.User.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.User.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash me-1"></i>Delete
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h6>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">User ID</label>
                                    <p class="mb-0 fw-bold">#@Model.User.Id</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Full Name</label>
                                    <p class="mb-0 fw-bold fs-5">@Model.User.FullName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Email</label>
                                    <p class="mb-0">
                                        <i class="fas fa-envelope text-primary me-2"></i>@Model.User.Email
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Password</label>
                                    <p class="mb-0">
                                        <i class="fas fa-envelope text-primary me-2"></i>@Model.User.Password
                                    </p>
                                </div>
                                <div>
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Phone</label>
                                    <p class="mb-0">
                                        <i class="fas fa-phone text-success me-2"></i>@Model.User.PhoneNumber
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                                    <i class="fas fa-briefcase me-2"></i>Role & Statistics
                                </h6>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Role</label>
                                    <p class="mb-0">
                                        <span class="badge bg-@GetRoleBadgeClass(Model.User.Role)" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                            @GetRoleIcon(Model.User.Role) @Model.User.Role
                                        </span>
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Age</label>
                                    <p class="mb-0 fw-bold fs-4">@Model.User.Age años</p>
                                </div>
                                <div>
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Total Sales</label>
                                    <p class="mb-0">
                                        <span class="badge bg-info" style="font-size: 1.2rem; padding: 0.5rem 1rem;">
                                            <i class="fas fa-shopping-cart me-2"></i>@Model.User.TotalSales ventas
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                            <i class="fas fa-map-marker-alt me-2"></i>Address
                        </h6>
                        <div class="p-3 bg-light rounded-3">
                            <p class="mb-0">@(Model.User.Address ?? "No address registered")</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                            <i class="fas fa-birthday-cake me-2"></i>Date of Birth
                        </h6>
                        <div class="p-3 bg-light rounded-3">
                            <p class="mb-0 fw-bold">@Model.User.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between gap-3">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div class="d-flex gap-2">
                            <a asp-page="Edit" asp-route-id="@Model.User.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Edit User
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.User.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "User" => "primary",
            "Guest" => "secondary",
            _ => "dark"
        };
    }

    string GetRoleIcon(string role)
    {
        return role switch
        {
            "Admin" => "Admin",
            "Manager" => "Manager",
            "User" => "User",
            "Guest" => "Guest",
            _ => "Unknown"
        };
    }
}