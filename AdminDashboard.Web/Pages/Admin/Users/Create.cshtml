@page
@model AdminDashboard.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid px-4 pt-4 animate-fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-1 text-gradient" style="font-size: 2.5rem; font-weight: 800;">
                <i class="fas fa-user-plus me-3"></i>Create New User
            </h1>
            <p class="text-muted" style="font-size: 1.1rem;">
                <i class="fas fa-info-circle me-2"></i>Registra un nuevo usuario en el sistema
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-id-card me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="CreateUserDto.FirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input asp-for="CreateUserDto.FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="CreateUserDto.FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="CreateUserDto.LastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input asp-for="CreateUserDto.LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="CreateUserDto.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CreateUserDto.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="CreateUserDto.Email" class="form-control" placeholder="email@example.com" />
                            </div>
                            <span asp-validation-for="CreateUserDto.Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="CreateUserDto.PhoneNumber" class="form-label">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-phone text-success"></i>
                                    </span>
                                    <input asp-for="CreateUserDto.PhoneNumber" class="form-control" placeholder="+1234567890" />
                                </div>
                                <span asp-validation-for="CreateUserDto.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="CreateUserDto.DateOfBirth" class="form-label">
                                    <i class="fas fa-calendar me-2"></i>Date of Birth
                                </label>
                                <input asp-for="CreateUserDto.DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="CreateUserDto.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CreateUserDto.Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Address
                            </label>
                            <textarea asp-for="CreateUserDto.Address" class="form-control" rows="3" 
                                      placeholder="Street address, city, state"></textarea>
                            <span asp-validation-for="CreateUserDto.Address" class="text-danger"></span>
                        </div>

                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}