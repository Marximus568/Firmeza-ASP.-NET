@page
@model AdminDashboard.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex">
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column p-3 bg-dark text-white" style="min-height: 100vh; width: 220px;">
        <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4">Admin Panel</span>
        </a>
        <hr class="text-white">
        <ul class="nav nav-pills flex-column mb-auto">
            <li>
                <a asp-area="Admin" asp-page="Products/Index" class="nav-link text-white">Productos</a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="Users/Index" class="nav-link text-white">Clientes</a>
            </li>
            <li>
                <a asp-area="Admin" class="nav-link text-white">Ventas</a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="content flex-grow-1 p-4">
        <h1 class="mb-4">Dashboard</h1>

        <div class="row g-3">
            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm">
                    <h5 class="card-title">Total Productos</h5>
                    <p class="card-text fs-4">@Model.TotalProducts</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm">
                    <h5 class="card-title">Total Clientes</h5>
                    <p class="card-text fs-4">@Model.TotalClients</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3 shadow-sm">
                    <h5 class="card-title">Total Ventas</h5>
                    <p class="card-text fs-4">@Model.TotalSales</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS y JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
