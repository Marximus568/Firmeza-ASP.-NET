@page "{id:int?}"
@model AdminDashboard.Users.DetailsModel
@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user me-2"></i>User Details
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.User != null)
                    {
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded">
                                    <h5 class="text-muted mb-2">
                                        <i class="fas fa-id-badge me-2"></i>Personal Information
                                    </h5>
                                    <hr>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">ID:</dt>
                                        <dd class="col-sm-8">@Model.User.Id</dd>

                                        <dt class="col-sm-4">Full Name:</dt>
                                        <dd class="col-sm-8"><strong>@Model.User.FullName</strong></dd>

                                        <dt class="col-sm-4">First Name:</dt>
                                        <dd class="col-sm-8">@Model.User.FirstName</dd>

                                        <dt class="col-sm-4">Last Name:</dt>
                                        <dd class="col-sm-8">@Model.User.LastName</dd>

                                        <dt class="col-sm-4">Age:</dt>
                                        <dd class="col-sm-8">@Model.User.Age years old</dd>

                                        <dt class="col-sm-4">Date of Birth:</dt>
                                        <dd class="col-sm-8">@Model.User.DateOfBirth.ToString("MMMM dd, yyyy")</dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded">
                                    <h5 class="text-muted mb-2">
                                        <i class="fas fa-address-card me-2"></i>Contact Information
                                    </h5>
                                    <hr>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Email:</dt>
                                        <dd class="col-sm-8">
                                            <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                                        </dd>

                                        <dt class="col-sm-4">Phone:</dt>
                                        <dd class="col-sm-8">
                                            <a href="tel:@Model.User.PhoneNumber">@Model.User.PhoneNumber</a>
                                        </dd>

                                        <dt class="col-sm-4">Address:</dt>
                                        <dd class="col-sm-8">@Model.User.Address</dd>

                                        <dt class="col-sm-4">Role:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-@GetRoleBadgeClass(Model.User.Role) fs-6">
                                                @Model.User.Role
                                            </span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="p-3 bg-light rounded">
                                    <h5 class="text-muted mb-2">
                                        <i class="fas fa-chart-line me-2"></i>Activity Statistics
                                    </h5>
                                    <hr>
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <div class="card border-primary">
                                                <div class="card-body">
                                                    <h3 class="text-primary">@Model.User.TotalSales</h3>
                                                    <p class="text-muted mb-0">Total Sales</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card border-success">
                                                <div class="card-body">
                                                    <h3 class="text-success">Active</h3>
                                                    <p class="text-muted mb-0">Account Status</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card border-info">
                                                <div class="card-body">
                                                    <h3 class="text-info">@Model.User.Role</h3>
                                                    <p class="text-muted mb-0">User Role</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <div>
                                <a asp-page="Edit" asp-route-id="@Model.User.Id" class="btn btn-warning">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-page="Delete" asp-route-id="@Model.User.Id" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            User not found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "User" => "primary",
            "Guest" => "secondary",
            _ => "dark"
        };
    }
}