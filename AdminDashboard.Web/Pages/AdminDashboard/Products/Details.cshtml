@page
@model global::AdminDashboard.Pages.AdminDashboard.Products.Details.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4 animate-fade-in-up">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-1 text-gradient" style="font-size: 2.5rem; font-weight: 800;">
                <i class="fas fa-info-circle me-3"></i>Product Details
            </h1>
            <p class="text-muted" style="font-size: 1.1rem;">
                <i class="fas fa-box me-2"></i>Informaci√≥n detallada del producto
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-box-open me-2"></i>@Model.Product.Name
                    </h5>
                    <div class="d-flex gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-page="Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash me-1"></i>Delete
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                                    <i class="fas fa-tag me-2"></i>Product Information
                                </h6>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Product ID</label>
                                    <p class="mb-0 fw-bold">#@Model.Product.Id</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Name</label>
                                    <p class="mb-0 fw-bold fs-5">@Model.Product.Name</p>
                                </div>
                                <div>
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Category</label>
                                    @if (!string.IsNullOrEmpty(Model.Product.CategoryName))
                                    {
                                        <p class="mb-0">
                                            <span class="badge bg-primary">@Model.Product.CategoryName</span>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 text-muted">No category assigned</p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                                    <i class="fas fa-chart-line me-2"></i>Pricing & Stock
                                </h6>
                                <div class="mb-3">
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Unit Price</label>
                                    <p class="mb-0">
                                        <span class="fs-3 fw-bold text-success">$@Model.Product.UnitPrice.ToString("N2")</span>
                                    </p>
                                </div>
                                <div>
                                    <label class="form-label text-muted mb-1" style="font-size: 0.875rem;">Stock Available</label>
                                    <p class="mb-0">
                                        <span class="badge @(Model.Product.Stock > 50 ? "bg-success" : Model.Product.Stock > 10 ? "bg-warning" : "bg-danger")" 
                                              style="font-size: 1.2rem; padding: 0.5rem 1rem;">
                                            <i class="fas fa-boxes me-2"></i>@Model.Product.Stock units
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">
                            <i class="fas fa-align-left me-2"></i>Description
                        </h6>
                        <div class="p-3 bg-light rounded-3">
                            @if (!string.IsNullOrEmpty(Model.Product.Description))
                            {
                                <p class="mb-0">@Model.Product.Description</p>
                            }
                            else
                            {
                                <p class="mb-0 text-muted fst-italic">No description available</p>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded-3">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="fas fa-calendar-plus fa-2x text-primary"></i>
                                    </div>
                                    <div>
                                        <label class="form-label text-muted mb-1" style="font-size: 0.75rem;">Created At</label>
                                        <p class="mb-0 fw-bold">@Model.Product.CreatedAt.ToString("MMM dd, yyyy")</p>
                                        <small class="text-muted">@Model.Product.CreatedAt.ToString("hh:mm tt")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="p-3 border rounded-3">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="fas fa-calendar-check fa-2x text-success"></i>
                                    </div>
                                    <div>
                                        <label class="form-label text-muted mb-1" style="font-size: 0.75rem;">Last Updated</label>
                                        <p class="mb-0 fw-bold">@(Model.Product.UpdatedAt?.ToString("MMM dd, yyyy") ?? "N/A")</p>
                                        <small class="text-muted">@(Model.Product.UpdatedAt?.ToString("hh:mm tt") ?? "")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between gap-3">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex gap-2">
                                <a asp-page="Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning">
                                    <i class="fas fa-edit me-2"></i>Edit Product
                                </a>
                                <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>