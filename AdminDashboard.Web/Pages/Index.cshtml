@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="home-container animate-fade-in-up">
    <!-- Hero Section -->
    <div class="hero-section text-center py-5 mb-5 rounded-3 position-relative overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; box-shadow: 0 20px 40px -10px rgba(118, 75, 162, 0.4);">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'0.05\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
        
        <div class="container position-relative z-index-1 py-5">
            <div class="mb-4">
                <i class="fas fa-shield-alt fa-4x mb-3 animate-bounce"></i>
            </div>
            <h1 class="display-3 fw-bold mb-3">AdminDashboard.Web</h1>
            <p class="lead mb-5 fs-3" style="opacity: 0.9;">Powerful management for your business</p>
            
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex justify-content-center gap-3">
                    <a asp-page="/AdminDashboard/Index" class="btn btn-light btn-lg px-5 py-3 shadow-lg fw-bold text-primary rounded-pill hover-scale">
                        <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                    </a>
                </div>
                <p class="mt-4 mb-0">
                    <span class="badge bg-white text-primary px-3 py-2 rounded-pill">
                        <i class="fas fa-user me-2"></i>Welcome back, @User.Identity.Name
                    </span>
                </p>
            }
            else
            {
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-page="/Account/Login" class="btn btn-light btn-lg px-5 py-3 shadow-lg fw-bold text-primary rounded-pill hover-scale">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-5 py-3 shadow-lg fw-bold rounded-pill hover-scale backdrop-blur">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Features Grid -->
    <div class="container mb-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-lg hover-lift transition-all">
                    <div class="card-body p-4 text-center">
                        <div class="icon-box mb-4 mx-auto bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-box fa-2x"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3">Product Management</h3>
                        <p class="text-muted mb-0">
                            Effortlessly manage your inventory. Create, update, and track products with our intuitive interface.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-lg hover-lift transition-all">
                    <div class="card-body p-4 text-center">
                        <div class="icon-box mb-4 mx-auto bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3">User Administration</h3>
                        <p class="text-muted mb-0">
                            Control user access and roles. Manage your team and customers from a central location.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-lg hover-lift transition-all">
                    <div class="card-body p-4 text-center">
                        <div class="icon-box mb-4 mx-auto bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3">Real-time Analytics</h3>
                        <p class="text-muted mb-0">
                            Get insights into your business performance with beautiful charts and real-time data visualization.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Tech Stack Section -->
    <div class="text-center py-5">
        <p class="text-uppercase text-muted fw-bold letter-spacing-2 mb-4">Powered By</p>
        <div class="d-flex justify-content-center gap-4 flex-wrap opacity-75">
            <span class="d-flex align-items-center gap-2 fs-5 fw-bold text-dark">
                <i class="fab fa-microsoft text-primary"></i> ASP.NET Core
            </span>
            <span class="d-flex align-items-center gap-2 fs-5 fw-bold text-dark">
                <i class="fab fa-bootstrap text-purple"></i> Bootstrap 5
            </span>
            <span class="d-flex align-items-center gap-2 fs-5 fw-bold text-dark">
                <i class="fas fa-database text-success"></i> Entity Framework
            </span>
        </div>
    </div>
</div>

<style>
    .hover-scale:hover {
        transform: scale(1.05);
    }
    .hover-lift:hover {
        transform: translateY(-10px);
    }
    .transition-all {
        transition: all 0.3s ease;
    }
    .backdrop-blur {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.1);
    }
    .letter-spacing-2 {
        letter-spacing: 2px;
    }
    .text-purple {
        color: #6f42c1;
    }
    .z-index-1 {
        z-index: 1;
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
        40% {transform: translateY(-20px);}
        60% {transform: translateY(-10px);}
    }
    .animate-bounce {
        animation: bounce 2s infinite;
    }
</style>