@using Microsoft.AspNetCore.Identity
@using global::AdminDashboard.Identity.Entities
@inject SignInManager<ApplicationUserIdentity> SignInManager
@inject UserManager<ApplicationUserIdentity> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminDashboard.Web</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav>
        <ul>
            <li><a asp-page="/Index"><i class="fas fa-home"></i> Home</a></li>
            @if (SignInManager.IsSignedIn(User))
            {
                <li>
                    <form method="post" asp-page="/Account/Logout" id="logoutForm">
                        <button type="submit"><i class="fas fa-sign-out-alt"></i> Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li><a asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
            }
        </ul>
    </nav>
</header>

<main role="main" class="container">
    @RenderBody()
</main>

<footer>
    <p>&copy; @DateTime.Now.Year - AdminDashboard.Web</p>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
