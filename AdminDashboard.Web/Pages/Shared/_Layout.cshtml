@using Microsoft.AspNetCore.Identity
@using global::AdminDashboard.Identity.Entities
@inject SignInManager<ApplicationUserIdentity> SignInManager
@inject UserManager<ApplicationUserIdentity> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdminDashboard.Web</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container-fluid px-4">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center fw-bold fs-4" asp-page="/Index">
                <i class="fas fa-shield-alt me-2"></i>
                <span class="d-none d-md-inline">AdminDashboard</span>
            </a>
            
            <!-- Toggle button for mobile -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-3 rounded-3 nav-link-hover" asp-page="/Index">
                            <i class="fas fa-home me-2"></i>Home
                        </a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded-3 nav-link-hover" asp-page="/Admin/Index">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 rounded-3 nav-link-hover" asp-page="/Admin/Products/Index">
                                <i class="fas fa-box me-2"></i>Products
                            </a>
                        </li>
                    }
                </ul>
                
                <!-- User Section -->
                <div class="d-flex align-items-center gap-3">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="d-none d-lg-flex align-items-center bg-white bg-opacity-10 px-3 py-2 rounded-pill">
                            <i class="fas fa-user-circle me-2"></i>
                            <span class="small">@User.Identity.Name</span>
                        </div>
                        <form method="post" asp-page="/Account/Logout" id="logoutForm" class="m-0">
                            <button type="submit" class="btn btn-outline-light btn-sm px-4 rounded-pill">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-page="/Account/Login" class="btn btn-light btn-sm px-4 rounded-pill">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <a asp-page="/Account/Register" class="btn btn-outline-light btn-sm px-4 rounded-pill d-none d-md-inline-block">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<style>
    .nav-link-hover {
        transition: all 0.3s ease;
    }
    
    .nav-link-hover:hover {
        background-color: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
    }
    
    .navbar-brand {
        transition: transform 0.3s ease;
    }
    
    .navbar-brand:hover {
        transform: scale(1.05);
    }
    
    .btn-outline-light:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.3);
    }
    
    .navbar {
        backdrop-filter: blur(10px);
    }
</style>

<main role="main" class="pb-5">
    @RenderBody()
</main>

<footer class="footer mt-auto py-4 text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container-fluid px-4">
        <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <p class="mb-0">
                    <i class="fas fa-shield-alt me-2"></i>
                    &copy; @DateTime.Now.Year AdminDashboard.Web - All rights reserved
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <p class="mb-0">
                    <i class="fas fa-code me-2"></i>Built with 
                    <i class="fas fa-heart text-danger mx-1"></i> using ASP.NET Core
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
